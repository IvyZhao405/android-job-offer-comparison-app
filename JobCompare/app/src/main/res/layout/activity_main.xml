<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menuID"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:layout_marginTop="72dp"
        android:text="MENU"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enterCurrentJobButtonID"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:text="Enter Current Job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuID" />

    <Button
        android:id="@+id/enterJobOffersButtonID"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Enter Job Offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterCurrentJobButtonID" />

    <Button
        android:id="@+id/adjustComparisonSettingsButtonID"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Adjust Comparison Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterJobOffersButtonID" />

    <Button
        android:id="@+id/compareJobOffersButtonID"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:text="Compare Job Offers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adjustComparisonSettingsButtonID"
        app:layout_constraintVertical_bias="0.044" />
</androidx.constraintlayout.widget.ConstraintLayout>